<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Un bout de Ficel" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <link rel="stylesheet" href="aos/aos.scss" />
  </head>
  <body>
      <%= partial 'layouts/components/navbar' %>
      <div class="nav-offset-top"></div>
      <%= yield %>
      <div class="foot-up"></div>
      <%= partial 'layouts/components/footer' %>
    <!-- stellar on top of jquery -->
    <script>$(window).stellar({verticalOffset : 200});</script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="javascripts/lightbox.js"></script>
    <script>
      AOS.init({
        offset: 70,
        duration: 500,
        easing: 'ease-in-out',
        delay: 300,
      });
  </script>
  </body>
</html>
